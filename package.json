{
    "name": "__project-name__",
    "version": "1.0.0",
    "description": "",
    "main": "js/main.js",
    "directories": {
        "doc": "doc"
    },
    "scripts": {
        "watch:sass": "node-sass sass/main.scss css/style.css -w",
        "devserver": "live-server",
        "start": "npm-run-all --parallel devserver watch:sass",
        "compile:sass": "node-sass sass/main.scss css/main.comp.css",
        "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/main.comp.css -o css/main.prefix.css",
        "concat:css": "concat -o css/main.concat.css css/main.css css/main.prefix.css",
        "compress:css": "node-sass css/main.prefix.css css/main.css --output-style compressed",
        "build:css": "npm-run-all compile:sass prefix:css concat:css compress:css"
    },
    "keywords": [],
    "author": "Luu <luuductrung1234@gmail.com> (https://github.com/luuductrung1234/)",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.0.0",
        "concat": "^1.0.3",
        "live-server": "1.2.0",
        "node-sass": "^4.7.2",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^5.0.0",
        "html5-boilerplate": "6.0.1"
    }
}